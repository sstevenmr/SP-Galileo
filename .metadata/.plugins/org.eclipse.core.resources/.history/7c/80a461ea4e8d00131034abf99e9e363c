	}
	
	

	public void changeTextView{
		Intent intent = getIntent();
		String queryText = intent.getStringExtra(QUERY).toString();
		int id = 0;
		if(queryText != null){
			txtStore = (TextView) findViewById(R.id.textView1);
			txtAdress = (TextView) findViewById(R.id.textView2);
			txthoraryI = (TextView) findViewById(R.id.textView3);
			txthoraryF = (TextView) findViewById(R.id.textView4);
			txtPhoneNumber = (TextView) findViewById(R.id.textView5);
			txtWebSite = (TextView) findViewById(R.id.textView6);
			txtEmail = (TextView) findViewById(R.id.textView7);
			if(queryText.equals(datos.get(1).getStore().toString())){
				id = 1;	
			}else if(queryText.equals(datos.get(2).getStore().toString())){
				id = 2;
			}else if(queryText.equals(datos.get(3).getStore().toString())){
				id = 3;
			}else if(queryText.equals(datos.get(4).getStore().toString())){
				id = 4;
			}else if(queryText.equals(datos.get(5).getStore().toString())){
				id = 5;
			}else if(queryText.equals(datos.get(6).getStore().toString())){
				id = 6;
			}else if(queryText.equals(datos.get(7).getStore().toString())){
				id = 7;
		
			Linkify.addLinks(txtMsg, Linkify.ALL);
		}
	}
	@Override
	public boolean onCreateOptionsMenu(Menu menu) {
		// Inflate the menu; this adds items to the action bar if it is present.
		getMenuInflater().inflate(R.menu.details, menu);
		return true;
	}

}
