		}
		return bitmap;
	}
	public Bitmap fromCamera(Intent data){
		Bitmap bitmap=null;
		Bundle extras = data.getExtras();
		if(extras != null ){
			 bitmap = (Bitmap) extras.get("data");
		}
		return bitmap;
	}
		*/
